{
  "dashboard": {
    "title": "IoT Serverless - DynamoDB Data",
    "uid": "iot-serverless-dynamodb",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Runs par Statut",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "datasource": {
          "type": "grafana-athena-datasource",
          "uid": "athena-dynamodb"
        },
        "targets": [
          {
            "refId": "A",
            "rawSQL": "SELECT status, COUNT(*) as count FROM runs GROUP BY status",
            "format": "table"
          }
        ],
        "options": {
          "legend": {
            "displayMode": "table",
            "placement": "right",
            "values": ["value"]
          }
        }
      },
      {
        "id": 2,
        "title": "Derniers Runs",
        "type": "table",
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 16,
          "h": 8
        },
        "datasource": {
          "type": "grafana-athena-datasource",
          "uid": "athena-dynamodb"
        },
        "targets": [
          {
            "refId": "A",
            "rawSQL": "SELECT id, username, status, startedAt, finishedAt FROM runs ORDER BY startedAt DESC LIMIT 20",
            "format": "table"
          }
        ]
      },
      {
        "id": 3,
        "title": "Sensor Readings (Time Series)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 24,
          "h": 10
        },
        "datasource": {
          "type": "grafana-athena-datasource",
          "uid": "athena-dynamodb"
        },
        "targets": [
          {
            "refId": "A",
            "rawSQL": "SELECT from_iso8601_timestamp(timestamp) as time, sensorId, reading FROM sensor_data WHERE type = 'temperature' AND from_iso8601_timestamp(timestamp) > current_timestamp - interval '6' hour ORDER BY timestamp DESC LIMIT 1000",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Sensor Data par Type",
        "type": "barchart",
        "gridPos": {
          "x": 0,
          "y": 18,
          "w": 12,
          "h": 8
        },
        "datasource": {
          "type": "grafana-athena-datasource",
          "uid": "athena-dynamodb"
        },
        "targets": [
          {
            "refId": "A",
            "rawSQL": "SELECT type, COUNT(*) as count FROM sensor_data GROUP BY type",
            "format": "table"
          }
        ]
      },
      {
        "id": 5,
        "title": "Statistiques par Sensor",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 18,
          "w": 12,
          "h": 8
        },
        "datasource": {
          "type": "grafana-athena-datasource",
          "uid": "athena-dynamodb"
        },
        "targets": [
          {
            "refId": "A",
            "rawSQL": "SELECT sensorId, type, AVG(reading) as avg_reading, MIN(reading) as min_reading, MAX(reading) as max_reading, COUNT(*) as count FROM sensor_data GROUP BY sensorId, type ORDER BY count DESC LIMIT 20",
            "format": "table"
          }
        ]
      },
      {
        "id": 6,
        "title": "Lambda Invocations (CloudWatch)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 26,
          "w": 12,
          "h": 8
        },
        "datasource": {
          "type": "cloudwatch",
          "uid": "cloudwatch"
        },
        "targets": [
          {
            "refId": "A",
            "namespace": "AWS/Lambda",
            "metricName": "Invocations",
            "dimensions": {
              "FunctionName": "iot-playground-sensor-api-serverless-dev"
            },
            "statistic": "Sum",
            "period": "300"
          }
        ]
      },
      {
        "id": 7,
        "title": "Custom Metrics - Sensor Reading",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 26,
          "w": 12,
          "h": 8
        },
        "datasource": {
          "type": "cloudwatch",
          "uid": "cloudwatch"
        },
        "targets": [
          {
            "refId": "A",
            "namespace": "IoTPlayground/Sensors",
            "metricName": "SensorReading",
            "dimensions": {
              "Type": "temperature"
            },
            "statistic": "Average",
            "period": "60"
          }
        ]
      }
    ]
  },
  "overwrite": false
}

