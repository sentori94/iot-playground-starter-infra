{
  "dashboard": {
    "title": "IoT Serverless - DynamoDB Data",
    "uid": "iot-serverless-dynamodb",
    "timezone": "browser",
    "schemaVersion": 30,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Runs par Statut",
        "type": "piechart",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 8,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "athena-dynamodb"
            },
            "rawSQL": "SELECT status, COUNT(*) as count FROM runs GROUP BY status",
            "format": "table"
          }
        ]
      },
      {
        "id": 2,
        "title": "Derniers Runs",
        "type": "table",
        "gridPos": {
          "x": 8,
          "y": 0,
          "w": 16,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "athena-dynamodb"
            },
            "rawSQL": "SELECT id, username, status, startedAt, finishedAt FROM runs ORDER BY startedAt DESC LIMIT 20",
            "format": "table"
          }
        ]
      },
      {
        "id": 3,
        "title": "Sensor Readings (Time Series)",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 8,
          "w": 24,
          "h": 10
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "athena-dynamodb"
            },
            "rawSQL": "SELECT from_iso8601_timestamp(timestamp) as time, sensorId, reading FROM sensor_data WHERE type = 'temperature' ORDER BY timestamp DESC LIMIT 1000",
            "format": "time_series"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "celsius",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Sensor Data par Type",
        "type": "barchart",
        "gridPos": {
          "x": 0,
          "y": 18,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "athena-dynamodb"
            },
            "rawSQL": "SELECT type, COUNT(*) as count FROM sensor_data GROUP BY type",
            "format": "table"
          }
        ]
      },
      {
        "id": 5,
        "title": "Sensor Data par Sensor ID",
        "type": "table",
        "gridPos": {
          "x": 12,
          "y": 18,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "athena-dynamodb"
            },
            "rawSQL": "SELECT sensorId, type, AVG(reading) as avg_reading, COUNT(*) as count FROM sensor_data GROUP BY sensorId, type ORDER BY count DESC LIMIT 20",
            "format": "table"
          }
        ]
      },
      {
        "id": 6,
        "title": "CloudWatch - Lambda Invocations",
        "type": "timeseries",
        "gridPos": {
          "x": 0,
          "y": 26,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "cloudwatch"
            },
            "namespace": "AWS/Lambda",
            "metricName": "Invocations",
            "dimensions": {
              "FunctionName": "iot-playground-sensor-api-serverless-dev"
            },
            "statistics": ["Sum"],
            "period": "300"
          }
        ]
      },
      {
        "id": 7,
        "title": "CloudWatch - Custom Metrics (SensorReading)",
        "type": "timeseries",
        "gridPos": {
          "x": 12,
          "y": 26,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "refId": "A",
            "datasource": {
              "uid": "cloudwatch"
            },
            "namespace": "IoTPlayground/Sensors",
            "metricName": "SensorReading",
            "dimensions": {
              "Type": "temperature"
            },
            "statistics": ["Average"],
            "period": "60"
          }
        ]
      }
    ],
    "time": {
      "from": "now-6h",
      "to": "now"
    }
  }
}

